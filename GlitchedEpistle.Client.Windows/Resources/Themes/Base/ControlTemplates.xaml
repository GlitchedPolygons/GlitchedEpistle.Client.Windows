    <!-- Button -->
    <ControlTemplate x:Key="DefaultButtonTemplate" TargetType="{x:Type Button}">
        <Border x:Name="ButtonBorder"
                CornerRadius="16.00"
                BorderThickness="2.00"
                Height="{TemplateBinding Height}"
                Padding="{TemplateBinding Padding}"
                BorderBrush="{DynamicResource InputFieldBorderColor}"
                Background="{DynamicResource InputFieldBackgroundColor}">
            <TextBlock VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Text="{TemplateBinding Button.Content}" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Foreground"
                        Value="White" />

                <Setter TargetName="ButtonBorder"
                        Property="Background"
                        Value="#FF4C646C" />

                <Setter TargetName="ButtonBorder"
                        Property="BorderBrush"
                        Value="#FF5798D8" />
            </Trigger>

            <Trigger Property="IsMouseOver"
                     Value="False">
                <Setter Property="Foreground"
                        Value="AliceBlue" />
            </Trigger>

            <Trigger Property="IsPressed"
                     Value="True">
                <Setter TargetName="ButtonBorder"
                        Property="Background"
                        Value="#699BAD" />
            </Trigger>

            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter Property="Foreground"
                        Value="#FF595959" />

                <Setter TargetName="ButtonBorder"
                        Property="Opacity"
                        Value="0.70" />

                <Setter TargetName="ButtonBorder"
                        Property="Background"
                        Value="#FF212121" />

                <Setter TargetName="ButtonBorder"
                        Property="BorderBrush"
                        Value="#FF292929" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Button (Convos List Entry) -->
    <ControlTemplate x:Key="OnlyRightCornersRoundedButtonTemplate" TargetType="{x:Type Button}">
        <Border x:Name="ConvoButtonBorder"
                Padding="16,6"
                BorderThickness="0.20"
                BorderBrush="#FF404040"
                Background="#FF343434"
                CornerRadius="0.00,16.00,16.00,0.00">
            <TextBlock Text="{TemplateBinding Button.Content}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" 
                     Value="True">
                <Setter TargetName="ConvoButtonBorder" 
                        Property="BorderBrush" 
                        Value="#FF5798D8" />

                <Setter TargetName="ConvoButtonBorder" 
                        Property="Background" 
                        Value="#FF4C646C" />

                <Setter Property="Foreground" 
                        Value="White" />
            </Trigger>

            <Trigger Property="IsMouseOver" 
                     Value="False">
                <Setter Property="Foreground" 
                        Value="AliceBlue" />
            </Trigger>

            <Trigger Property="IsPressed" 
                     Value="True">
                <Setter TargetName="ConvoButtonBorder" 
                        Property="Background" 
                        Value="#699BAD" />
            </Trigger>

            <Trigger Property="IsFocused" 
                     Value="True">
                <Setter TargetName="ConvoButtonBorder" 
                        Property="BorderBrush" 
                        Value="#FF282828" />
            </Trigger>

            <Trigger Property="IsEnabled" 
                     Value="False">
                <Setter Property="Foreground" 
                        Value="#FF595959" />

                <Setter TargetName="ConvoButtonBorder" 
                        Property="Opacity" 
                        Value="0.7" />

                <Setter TargetName="ConvoButtonBorder" 
                        Property="Background" 
                        Value="#FF212121" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>
    