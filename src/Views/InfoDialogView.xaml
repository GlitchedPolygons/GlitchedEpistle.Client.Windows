<Window x:Class="GlitchedPolygons.GlitchedEpistle.Client.Windows.Views.InfoDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlitchedPolygons.GlitchedEpistle.Client.Windows.Views"
        mc:Ignorable="d"
        xmlns:p="clr-namespace:GlitchedPolygons.GlitchedEpistle.Client.Windows.Properties"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Images/help-icon-white.png"
        MaxWidth="{Binding MaxWidth}"
        Title="{Binding Title}"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock TextWrapping="Wrap"
                       Text="{Binding Text}"
                       Style="{DynamicResource TextBlock}" />

            <Button Content="{Binding OkButtonText}"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0"
                    Command="{Binding OkButtonCommand}" />
        </StackPanel>
    </Grid>
</Window>
